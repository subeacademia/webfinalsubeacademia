rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección de diagnósticos
    // Cualquiera puede crear un diagnóstico (captura de lead)
    // Un usuario puede leer su propio diagnóstico
    // Solo los administradores pueden leer, actualizar o eliminar cualquier diagnóstico
    match /diagnostics/{diagnosticId} {
        // Un usuario puede crear su propio diagnóstico
        allow create: if request.auth != null;
        // Un usuario puede leer y actualizar su propio diagnóstico
        allow read, update: if request.auth.uid == resource.data.userId;
        // Solo los admins pueden leer y eliminar cualquier diagnóstico
        allow read, delete: if request.auth != null && (
          request.auth.token.email in ["bruno@subeia.tech"] ||
          request.auth.token.email.matches(".*@subeia\\.tech$")
        );
    }

    // Reglas para la colección de leads (original)
    // Cualquiera puede crear un lead
    // Solo los administradores pueden leer o interactuar con los datos.
    match /leads/{docId} {
        allow create: if true;
        allow read, update, delete: if request.auth != null && (
          request.auth.token.email in ["bruno@subeia.tech"] ||
          request.auth.token.email.matches(".*@subeia\\.tech$")
        );
    }

    // Nueva regla para los Leads de Diagnóstico
    match /diagnostic-leads/{leadId} {
      // Cualquiera puede crear un lead (cuando completa el diagnóstico)
      allow create: if true;
      // Solo los admins pueden leer, actualizar y eliminar leads
      allow read, update, delete: if request.auth != null && (
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$")
      );
    }

    // Reglas específicas para la colección de logos
    match /logos/{logoId} {
      // Cualquiera puede leer logos (para mostrar en el sitio web)
      allow read: if true;
      // Solo los administradores pueden crear, actualizar y eliminar logos
      allow create, update, delete: if request.auth != null && (
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$")
      );
    }

    // Reglas específicas para certificados
    match /certificates/{certificateId} {
      // Cualquiera puede leer certificados para validación pública
      allow read: if true;
      // Solo los administradores pueden crear, actualizar y eliminar certificados
      allow create, update, delete: if request.auth != null && (
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$")
      );
      // Validaciones adicionales para la creación/actualización
      allow write: if request.auth != null && 
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$") &&
        // Validar que los campos requeridos están presentes
        request.resource.data.studentName is string &&
        request.resource.data.courseName is string &&
        request.resource.data.certificateCode is string &&
        request.resource.data.qrCode is string &&
        request.resource.data.verificationHash is string &&
        request.resource.data.issuedDate is timestamp &&
        request.resource.data.completionDate is timestamp &&
        request.resource.data.institutionName is string &&
        request.resource.data.status in ['active', 'revoked', 'expired'] &&
        request.resource.data.certificateType in ['completion', 'achievement', 'participation'];
    }

    // Regla general para el resto de las colecciones
    // Cualquiera puede leer (get, list).
    // Solo los administradores autenticados pueden escribir (create, update, delete).
    match /{document=**} {
      allow get, list: if true;
      allow write: if request.auth != null && (
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$")
      );
    }
  }
}
