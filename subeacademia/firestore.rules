rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Lectura pública
      allow read: if true;
      // Escritura sólo autenticados y con validaciones básicas
      // TODO: Aplicar límite de tamaño máximo en bytes y validar types permitidos
      allow write: if request.auth != null;
    }
  }
}

