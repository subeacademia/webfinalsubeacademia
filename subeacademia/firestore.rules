rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email in ["bruno@subeia.tech"];
    }
    function isAuthed() { return request.auth != null; }

    // Público (lectura) de posts/courses publicados
    match /posts/{id} {
      allow read: if resource.data.published == true;
      allow create, update, delete: if isAdmin();
    }
    match /courses/{id} {
      allow read: if resource.data.published == true;
      allow create, update, delete: if isAdmin();
    }

    // Media metadata en colección media/
    match /media/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Settings del sitio
    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contenido público del sitio (home page)
    match /site_content/{doc} {
      allow read: if true; // La home debe poder leer sin autenticación
      allow write: if isAdmin(); // Solo admin puede gestionar frases
    }
  }
}
