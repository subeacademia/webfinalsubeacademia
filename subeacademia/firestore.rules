rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        "bruno@subeia.tech"
      ];
    }

    match /posts/{id} {
      allow read: if true; // p√∫blico
      allow write, delete: if isAdmin();
    }

    match /courses/{id} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    match /media/{id} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    match /settings/{doc} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
  }
}

