rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$")
      );
    }

    // Público (lectura) de posts/courses publicados
    match /posts/{id} {
      allow read: if (resource.data.status == 'published') || (resource.data.published == true);
      allow create, update, delete: if isAdmin();
    }
    match /courses/{id} {
      allow read: if (resource.data.status == 'published') || (resource.data.published == true);
      allow create, update, delete: if isAdmin();
    }

    // Media metadata en colección media/
    match /media/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Logos de clientes (empresas e instituciones)
    match /logos/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Settings del sitio
    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contenido público del sitio (home page)
    match /site_content/{doc} {
      allow read: if true; // Legacy
      allow write: if isAdmin();
    }

    // NUEVO: Configuración del sitio por idioma (textos de home)
    // TEMPORALMENTE PERMITIR ESCRITURA SIN AUTENTICACIÓN PARA DESARROLLO
    match /configuracion_sitio/{doc} {
      allow read: if true; // Home debe leer sin autenticación
      allow write: if true; // TEMPORAL: Permitir escritura sin autenticación
    }

    // NUEVO: Frases del typewriter (públicas para lectura, solo admin para escritura)
    // TEMPORALMENTE PERMITIR ESCRITURA SIN AUTENTICACIÓN PARA DESARROLLO
    match /typewriter_phrases/{id} {
      allow read: if true; // Home debe leer sin autenticación
      allow create, update, delete: if true; // TEMPORAL: Permitir escritura sin autenticación
    }

    // NUEVO: Reglas para usuarios autenticados
    // Los usuarios pueden leer y escribir únicamente en su propio subdirectorio
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Diagnósticos globales (mantener compatibilidad)
    match /diagnostics/{id} {
      allow read: if true; // Público para lectura
      allow create, update: if request.auth != null; // Usuarios autenticados pueden crear/actualizar
      allow delete: if isAdmin(); // Solo admins pueden eliminar
    }
  }
}
