{
  "name": "subeacademia",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ssg": "ng build --configuration=production",
    "serve:ssg": "npx http-server dist/subeacademia/browser -p 4200",
    "seed": "ts-node tools/seed.ts",
    "deploy:indexes": "firebase deploy --only \"firestore:indexes\" --project web-subeacademia",
    "deploy:db": "firebase deploy --only firestore",
    "dev:clean": "concurrently \"npm:kill\" \"ng cache clean\" \"rimraf dist\" && ng serve --port 4200 --open",
    "kill": "kill-port 4200 4300 || true",
    "dev": "concurrently \"npm:kill\" \"ng serve --port 4200 --open\"",
    "dev:4300": "concurrently \"kill-port 4300 || true\" \"ng serve --port 4300 --open\"",
    "pwa:off": "node -e \"const fs=require('fs');const a=JSON.parse(fs.readFileSync('angular.json','utf8'));const p=Object.keys(a.projects)[0];a.projects[p].architect.build.options.serviceWorker=false;fs.writeFileSync('angular.json',JSON.stringify(a,null,2));console.log('serviceWorker=false');\""
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/cdk": "^20.1.5",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.1.0",
    "@angular/localize": "^20.1.6",
    "@angular/material": "^20.1.5",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/service-worker": "^20.1.0",
    "@angular/ssr": "^20.1.5",
    "@ckeditor/ckeditor5-angular": "^10.0.0",
    "@ckeditor/ckeditor5-build-classic": "^41.4.2",
    "express": "^5.1.0",
    "firebase": "^11.10.0",
    "ngx-editor": "^19.0.0-beta.1",
    "ngx-markdown": "^20.0.0",
    "rxjs": "~7.8.0",
    "three": "^0.179.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "@types/prosemirror-model": "^1.16.2",
    "@types/prosemirror-view": "^1.23.3",
    "@types/three": "^0.179.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "kill-port": "^2.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.3",
    "sitemap": "^8.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2"
  }
}
