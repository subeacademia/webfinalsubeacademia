rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$")
      );
    }
    // Lectura pública de archivos publicados
    match /public/{allPaths=**} {
      allow read: if true;                // público
      allow write: if isAdmin();
    }
    // Zona privada (si la necesitas)
    match /private/{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // Reportes de diagnóstico generados por Cloud Functions
    match /reports/{diagnosticId}.pdf {
      allow read: if true; // Los PDFs son públicos una vez generados
      allow write: if false; // Solo las Cloud Functions pueden escribir
    }
    
    // Permitir que las Cloud Functions escriban en reports/
    match /reports/{allPaths=**} {
      allow read: if true; // Los reportes son públicos
      allow write: if false; // Solo Cloud Functions pueden acceder
    }
  }
}
