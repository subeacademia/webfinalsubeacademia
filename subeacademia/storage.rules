rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.token.email in ["bruno@subeia.tech"] ||
        request.auth.token.email.matches(".*@subeia\\.tech$")
      );
    }
    // Lectura pública de archivos publicados
    match /public/{allPaths=**} {
      allow read: if true;                // público
      allow write: if isAdmin();
    }
    // Zona privada (si la necesitas)
    match /private/{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // Reportes de diagnóstico generados por Cloud Functions
    // Hacemos los PDFs legibles públicamente, pero ninguna escritura desde clientes
    match /reports/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Escrituras solo desde privilegiados (Admin SDK / Functions via Security Rules bypass)
    }
  }
}
