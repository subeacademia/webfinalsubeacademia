rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite la lectura pública de todos los archivos (logos, imágenes, etc.).
    // Esto es necesario para que los visitantes del sitio web puedan ver las imágenes.
    // La escritura (subir, borrar, modificar) se mantiene restringida solo a usuarios autenticados.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}

 
